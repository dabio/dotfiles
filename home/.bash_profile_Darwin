# To enable shims and autocompletion for rbenv.
if which rbenv > /dev/null; then
    eval "$(rbenv init -)"
fi

# Alias definitions.
# You may want to put all your additions into a separate file like
# ~/.bash_aliases, instead of adding them here directly.
if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

HISTSIZE=5000
SAVEHIST=5000

# Enable bash completion with homebrew
if [ -f $(brew --prefix)/etc/bash_completion ]; then
    . $(brew --prefix)/etc/bash_completion
fi
# Change the caskroom
export HOMEBREW_CASK_OPTS="--caskroom=/usr/local/Caskroom"

# NPM
# Allow the npm-installed libraries to get picked up.
PATH=/usr/local/share/npm/bin:$PATH

# Go
# Define all projects for go here
export GOPATH=~/Projects/go
#export GOROOT=/usr/local/Cellar/go/1.1.2

# PostgreSQL
PATH=/Applications/Postgres93.app/Contents/MacOS/bin:$PATH
